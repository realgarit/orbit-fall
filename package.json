{
  "name": "orbit-fall",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:backend": "npm run build --workspace=packages/backend",
    "start": "npm run start --workspace=packages/backend"
  },
  "dependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@types/node": "^20.10.6"
  }
}
